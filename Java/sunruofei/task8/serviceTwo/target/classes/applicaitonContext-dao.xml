<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
">

    <!-- 加载配置文件 -->
    <context:property-placeholder location="classpath:properties/*.properties"/>

    <context:component-scan base-package="com.ptteng"/>


    <bean id="mailServiceImp" class="com.ptteng.service.impl.MailServiceImp"></bean>
    <!-- 将一个类发布为一个RMI服务 -->
    <bean id="mail" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <!--此处的name是决定helloWorld类中的那个参数，ref是指bean配置文件中的bean名称-->
        <property name="service" ref="mailServiceImp"/>
        <property name="serviceName" value="mail"></property>
        <property name="serviceInterface" value="com.ptteng.service.MailService"></property>
        <property name="registryPort" value="8887"></property>
    </bean>

